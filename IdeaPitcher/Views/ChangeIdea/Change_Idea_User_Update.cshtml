@using IdeaPitcher.DAL.Data;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdeaPitcherUser> UserManager;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Change_Idea_User_Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ContentModel
<h1>Change_Idea_User_Update</h1>
<form method="post" asp-action="Change_Idea_User_Update">
      
    <div>
        <select asp-for="createdby" asp-items="@Model.UserSelectList" class="form-control">
            <option value="">-- Select user --</option>
        </select>
        <span asp-validation-for="createdby" class="text-danger"></span>

    </div>
    <input type="hidden" asp-for="PostId" />
    <button asp-controller="ChangeIdea" asp-action="Change_Idea_User_Update"  type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
